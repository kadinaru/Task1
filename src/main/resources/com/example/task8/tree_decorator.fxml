<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="503.0" prefWidth="633.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task8.Controller">
    <children>
        <Pane fx:id="paintpane" layoutX="14.0" layoutY="15.0" prefHeight="392.0" prefWidth="400" style="-fx-border-color: black;" />
        <VBox layoutX="436.0" layoutY="15.0" prefHeight="127.0" prefWidth="159.0" spacing="10">
            <CheckBox fx:id="garlandCheckBox" onAction="#addGarland" text="Добавить гирлянду" />
            <CheckBox fx:id="toysCheckBox" onAction="#addToys" text="Добавить игрушки" />
            <CheckBox fx:id="starCheckBox" onAction="#addStar" text="Добавить звезду" />
            <!-- Кнопка "Добавить всё" -->
            <Button fx:id="addAllButton" onAction="#addAll" prefHeight="26.0" prefWidth="165.0" style="-fx-background-color: DARKGREEN;" text="Добавить всё" textFill="WHITE">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
            <effect>
               <Glow level="0.46" />
            </effect></Button>
            <!-- Кнопка "Убрать всё" -->
            <Button fx:id="removeAllButton" onAction="#removeAll" prefHeight="26.0" prefWidth="167.0" style="-fx-background-color: #8B0000;" text="Убрать всё" textFill="WHITE">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
            <effect>
               <Glow level="0.92" />
            </effect></Button>
        </VBox>
        <Label fx:id="statusLabel" layoutX="25.0" layoutY="436.0" text="Статус">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
